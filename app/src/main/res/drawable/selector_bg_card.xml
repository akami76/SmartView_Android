<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="150"
    android:exitFadeDuration="150">

    <item android:state_enabled="false"
        android:drawable="@drawable/card_disabled" /> <!-- disabled -->
    <item android:state_activated="true"
        android:drawable="@drawable/card_highlighted" /> <!-- activated -->
    <item android:state_pressed="true"
        android:drawable="@drawable/card_highlighted" /> <!-- pressed -->
    <item android:state_focused="true"
        android:drawable="@drawable/card_highlighted" /> <!-- focused -->
    <item android:state_hovered="true"
        android:drawable="@drawable/card_highlighted" /> <!-- hovered -->
    <item android:state_enabled="true"
        android:drawable="@drawable/card_default" /> <!-- default -->
</selector>