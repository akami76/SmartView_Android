<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <size
                android:width="10dp"
                android:height="10dp" />
            <solid android:color="@color/bg_divider_light" />

        </shape>
    </item>

    <item android:bottom="9dp">
        <shape android:shape="rectangle">
            <size
                android:width="10dp"
                android:height="1dp" />
            <solid android:color="@color/bg_divider" />

        </shape>
    </item>
    <item android:bottom="5dp">
        <shape android:shape="rectangle">
            <size
                android:width="5dp"
                android:height="5dp" />
            <gradient
                android:angle="90"
                android:endColor="@color/bg_divider_trans"
                android:startColor="@android:color/transparent" />

        </shape>
    </item>

</layer-list>