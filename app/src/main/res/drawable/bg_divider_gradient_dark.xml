<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <size
                android:width="5dp"
                android:height="5dp" />
            <solid android:color="@color/bg_divider_light" />

        </shape>
    </item>

    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <size
                android:width="5dp"
                android:height="1dp" />
            <solid android:color="@color/transparent_10_black" />

        </shape>
    </item>
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <size
                android:width="3dp"
                android:height="3dp" />
            <gradient
                android:angle="90"
                android:endColor="@color/transparent_70_black"
                android:startColor="@android:color/transparent" />

        </shape>
    </item>

</layer-list>